@page
@model FurEver.Pages.DogQuizModel
@{
    ViewData["Title"] = "Dog Breed Quiz";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/quiz.css" />
</head>
<body>
    <div class="container">
        <h1>Dog Breed Quiz</h1>
        @if (Model.QuizFinished)
        {
            <h2>Your Score: @Model.Score / @Model.TotalQuestions</h2>
            <a href="/DogQuiz" class="btn">Start Again</a>
            <!-- Link to navigate back to the home page -->
            <a href="/" class="btn">Back to Home</a> <!-- This is the link to the home page -->
        }
        else if (Model.QuizImageUrl != null)
        {
            <div class="dog-image">
                <img src="@Model.QuizImageUrl" alt="Guess the Dog Breed" />
            </div>
            <form method="post">
                <p>Question @Model.CurrentQuestionNumber of @Model.TotalQuestions: Select the breed:</p>
                @foreach (var option in Model.BreedOptions)
                {
                    <div>
                        <input type="radio" name="selectedBreed" value="@option" required /> @option
                    </div>
                }
                <button type="submit" class="btn">Submit Answer</button>
            </form>
        }

        @if (Model.AnswerResult != null)
        {
            <p class="@((Model.AnswerResult.Contains("Oops!") ? "quiz-result-wrong" : "quiz-result"))">
                @Model.AnswerResult
            </p>
        }
    </div>
</body>
</html>