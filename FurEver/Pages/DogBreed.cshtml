@page
@model FurEver.Pages.DogBreedModel
@{
    ViewData["Title"] = "Explore Dog Breeds";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Explore Dog Breeds</h1>

    <!-- Search Bar Container -->
    <div class="search-container">
        <form method="get">
            <img src="~/images/search.png" alt="search" class="searchicon" />
            <input type="text" id="searchTerm" name="SearchTerm" placeholder="Search Dog Breed" value="@Model.SearchTerm" />
            <button type="submit">Search</button>
        </form>
    </div>

    @if (Model.DogBreeds == null || !Model.DogBreeds.Any())
    {
        <p class="text-center text-muted">No breeds found.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var breed in Model.DogBreeds)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <!-- Breed Image -->
                        <img src="@breed.Images?.Small?.Outdoors" alt="dog-image" class="card-img-top" alt="@breed.General?.Name" style="height: 300px; object-fit: cover;">

                        <div class="card-body">
                            <!-- Breed Name -->
                            <h5 class="card-title">@breed.General?.Name</h5>

                            <!-- Breed Group -->
                            <p class="text-muted mb-1"><strong>Group:</strong> @breed.General?.Group</p>

                            <!-- Short Description -->
                            <p class="card-text text-truncate"><strong>Description:</strong> @breed.General?.ShortDescription</p>
                        </div>

                        <div class="card-footer text-center">
                            <a href="/DogDetails/@breed.General?.Name" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
