@page
@model FurEver.Pages.DogBreedModel
@{
    ViewData["Title"] = "Explore Dog Breeds";
}

<!-- Page Header with Styling -->
<div class="text-center mb-5">
    <h1 class="display-4 text-primary">Explore Dog Breeds</h1>
    <p class="lead text-muted">Discover the best dog breeds for your lifestyle</p>
</div>

<!-- Search Form Section -->
<div class="container mb-4">
    <form method="get" class="d-flex justify-content-center">
        <div class="input-group w-50">
            <input type="text" name="searchTerm" class="form-control" placeholder="Enter breed name" value="@Model.SearchTerm" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>
</div>

<!-- Dog Breed Table Section -->
<div class="container">
    @if (Model.DogBreeds == null || !Model.DogBreeds.Any())
    {
        <div class="alert alert-warning text-center">No breeds found.</div>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Group</th>
                    <th>Description</th>
                    <th>Popularity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var breed in Model.DogBreeds)
                {
                    <tr>
                        <td>@breed.General.Name</td>
                        <td>@breed.General.Group</td>
                        <td>@breed.General.ShortDescription</td>
                        <td>@breed.General.Popularity</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
