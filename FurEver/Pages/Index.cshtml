@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to FurEver!</h1>
    <p>Ready to take the Dog Breed Quiz?</p>
    <!-- Button to start quiz -->
    <form method="get" asp-page="/DogQuiz">
        <button type="submit" class="btn btn-primary">Start the Dog Quiz</button>
    </form>
</div>

<!-- Description Section -->
<div class="container text-center mt-5">
    <h2>About FurEver</h2>
    <p>FurEver is a fun and engaging platform where you can discover the perfect dog breed for your lifestyle. Whether you're a first-time dog owner or a seasoned pet parent, we help you find the ideal match with our Dog Breed Quiz. Explore, learn, and connect with all things canine!</p>
</div>

<!-- Dog Images Section -->
<div class="container text-center mt-5">
    <h3>Meet Some of Our Favorite Dog Breeds</h3>
    <div class="row">
        <div class="col-md-4">
            <img src="https://via.placeholder.com/400x300.png?text=Labrador+Retriever" alt="Labrador Retriever" class="img-fluid rounded mb-3">
            <h5>Labrador Retriever</h5>
        </div>
        <div class="col-md-4">
            <img src="https://via.placeholder.com/400x300.png?text=German+Shepherd" alt="German Shepherd" class="img-fluid rounded mb-3">
            <h5>German Shepherd</h5>
        </div>
        <div class="col-md-4">
            <img src="https://via.placeholder.com/400x300.png?text=Beagle" alt="Beagle" class="img-fluid rounded mb-3">
            <h5>Beagle</h5>
        </div>
    </div>
</div>

<!-- Additional link to view all dogs -->
<a class="dogbreed" asp-area="" asp-page="/DogBreed">
    <div class="menu-item-label">View All Dogs</div>
</a>
