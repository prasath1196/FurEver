@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FurEver</title>
    <link rel="stylesheet" href="/css/site.css" />
</head>

<div class="index-page">
    <!-- Main Heading -->
    <h1 class="main-heading">The best way to find your dream dog</h1>
    <p class="subheading">
        Fluffy, friendly, faithful, or your FurEver... Explore breeds, Test your knowledge, Find the perfect dog for you.
    </p>

    <!-- Animated Dog GIF -->
    <div class="dog-animation">
        <img src="/images/dog-running.gif" alt="Animated dog" class="dog-gif" />
    </div>

    <!-- Buttons -->
    <div class="button-container">
        <a asp-page="/DogBreed" class="btn btn-primary">Dog directory</a>
        <a asp-page="/quizupdated" class="btn btn-primary">Find your FurEver</a>
        <a asp-page="/DogQuiz" class="btn btn-primary">Test your knowledge</a>
     
    </div>

    <!-- Example Dog Images -->
    <div class="dog-images">
        <img src="/images/dog1.jpeg" alt="Dog 1" class="dog-img" />
        <img src="/images/dog2.jpeg" alt="Dog 2" class="dog-img" />
        <img src="/images/dog3.jpeg" alt="Dog 3" class="dog-img" />
    </div>
</div>
</html>